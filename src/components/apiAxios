import axios from 'axios';
import { useState } from 'react';

const App = () => {
  const [pokemon, setPokemon] = useState("pikachu");
  const [pokemonData, setPokemonData] = useState(null);
  const [error, setError] = useState("");

  const getPokemon = async () => {
    try {
      const res = await axios.get(`https://pokeapi.co/api/v2/pokemon/${pokemon}`);
      setPokemonData(res.data);
      setError("");
    } catch (e) {
      setPokemonData(null);
      setError("Pokémon not found");
    }
  };

  const handleChange = (e) => {
    setPokemon(e.target.value.toLowerCase());
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    getPokemon();
  };

  return (
    <div className="App">
      <form onSubmit={handleSubmit}>
        <input type="text" onChange={handleChange} placeholder="Search Pokémon..." />
      </form>

      {error && <p>{error}</p>}

      {pokemonData && (
        <div className="container">
          <img src={pokemonData.sprites.front_default} alt={pokemonData.name} />
          <div className="divTable">
            <div className="divTableBody">
              <div className="divTableRow">
                <div className="divTableCell">Type</div>
                <div className="divTableCell">{pokemonData.types[0].type.name}</div>
              </div>
              <div className="divTableRow">
                <div className="divTableCell">Height</div>
                <div className="divTableCell">{Math.round(pokemonData.height * 3.9)}"</div>
              </div>
              <div className="divTableRow">
                <div className="divTableCell">Weight</div>
                <div className="divTableCell">{Math.round(pokemonData.weight / 4.3)} lbs</div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default App;
